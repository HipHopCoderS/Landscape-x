.article-gallery
  background: #000
  position: relative
  border-radius: 10px 10px 0px 0px

.article-gallery-photos
  position: relative
  overflow: hidden
  border-radius: 10px 10px 0px 0px


.article-gallery-img
  display: none
  max-width: 100%
  &:first-child
    display: block
  &.loaded
    position: absolute
    display: block
  img
    display: block
    max-width: 100%
    margin: 0 auto
