$block-caption
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 2px
  //color: color-grey
  padding: 5px 15px;
  //margin-bottom: 1em
  //margin-left: 5px
  line-height: 1em
  //text-shadow: 0 1px color-widget-background
  font-weight: bold
  border-radius: 30px
  border: 1px solid color-link
  background: color-link
  display: inline-block;

$block
  background: color-widget-background
  box-shadow: 7px 7px 7px color-border
  //border: 1px solid color-border
  border-radius: 10px

$base-style
  h1, h2, h3, h4, h5, h6
    font-weight: bold;
    color: color-default
    font-family: font-serif
  h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
    color: color-default
    text-decoration: none
  h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
    color: color-link
  h2, h3, h4, h5, h6
    font-weight: 600;
    margin-bottom: 10px
  h1
    font-size: 1.5em
  h2
    font-size: 1.3em
    border-left: 7px #4cae4c solid;
    padding-left: 17px;
  h3
    font-size: 1.2em
  h4
    font-size: 1.1em
  h5
    font-size: 1em
  h6
    font-size: 1em
    color: color-grey
  hr
    border: 1px dashed color-border
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 0 20px
    line-height: line-height
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: disc
  ol
    list-style: decimal
  dt
    font-weight: bold
