<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title" data-scroll-reveal="enter top and over 0.7s" ><i class="fa fa-archive"></i><%= __('archive') %></h3>
    <div class="widget">
      <!-- <%- list_archives() %> -->
      <%- list_archives({format: "YYYY年MM月"}) %>
    </div>
  </div>
<% } %>

<script>
$(document).on("click", "ul.archive-list li.archive-list-item", function () {
  window.location.href = $(this).find('a').attr('href')
})
</script>
